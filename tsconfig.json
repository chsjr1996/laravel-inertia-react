{
    "compilerOptions": {
        "target": "es5",
        "module": "ES2022",
        "moduleResolution": "Node",
        "jsx": "react",
        "noImplicitAny": false,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "allowJs": true,
        "resolveJsonModule": true,
        "baseUrl": "resources/ts",
        "paths": {
            "@/*": [
                "*"
            ],
            "@Page/*": [
                "Pages/*"
            ],
            "@Component/*": [
                "Components/*"
            ],
        },
        "types": [
            "vite/client"
        ]
    },
    "include": [
        "resources/assets",
        "resources/ts",
    ],
    "exclude": [
        "node_modules"
    ],
}
